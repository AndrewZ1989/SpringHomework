<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="userService" class="domainServices.UserServiceImpl">
        <constructor-arg>
            <bean class="repositories.UsersRepositoryImpl"/>
        </constructor-arg>
    </bean>


    <bean id="eventService" class="domainServices.EventServiceImpl">
        <constructor-arg>
            <bean class="repositories.EventsRepositoryImpl"/>
        </constructor-arg>
    </bean>

    <bean id="auditoriumService" class="domainServices.AuditoriumServiceImpl">
        <constructor-arg value="target/resources/auditorium.json"/>
        <constructor-arg>
            <bean class="repositories.AuditoriumRepositoryImpl"/>
        </constructor-arg>
    </bean>

    <bean id="bookingService" class="domainServices.BookingServiceImpl">
        <constructor-arg ref="discountService"/>
        <constructor-arg>
            <bean class="repositories.BookingRepositoryImpl"/>
        </constructor-arg>
    </bean>

</beans>