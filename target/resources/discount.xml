<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="discountService" class="domainServices.discount.DiscountServiceImpl">
        <constructor-arg>
            <list>
                <ref bean="birthDayStrategy"/>
                <ref bean="everyTenStrategy"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="birthDayStrategy" class="domainServices.discount.BirthdayStrategy"/>

    <bean id="everyTenStrategy" class="domainServices.discount.EveryTenTicket"/>


</beans>